<div class="left">
  <h1>All Butterflies</h1>

<% @butterflies.each do |butterfly| %>
  <div class="butterfly">
    <h3><a href="/butterflies/<%= butterfly.id %>">
      <%= butterfly.name %>
    </a></h3>
    <img src="<%= butterfly.image %>">    
  </div>
<% end %>

</div>
<div class="right">
  <h1>All Plants</h1>

<% @plants.each do |plant| %>
  <div class="plant">
    <h3><a href="/plants/<%= plant.id %>">
      <%= plant.name %>
    </a></h3>
    <img src="<%= plant.image %>">    
  </div>
<% end %>
</div>