<h2>Edit plant</h2>

<form action="/plants/<%= @plant.id %>" method="post">
  <label for="name">Name: </label>
  <input type="text" id="name" name="name" value="<%= @plant.name %>">

  <label for="image">Image: </label>
  <input type="text" id="image" name="image" value="<%= @plant.image %>">

  <label for="family">Family: </label>
  <select name="family" id="family">
    <% %w{Lycaenidae Nymphalidae Papilionidae Pieridae Riodinidae}.each do |family| %>
    <option <%= "selected" if family == @plant.family %>>
      <%= family %></option>
    <% end %>
  </select>

  <button type="submit">Update Plant</button>
</form>