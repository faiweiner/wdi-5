<h2>Edit new butterfly</h2>

<form action="/butterflies/<%= @butterfly['id'] %>" method="post">
  <label for="name">Name: </label>
  <input type="text" id="name" name="name" value="<%= @butterfly['name'] %>">

  <label for="image">Image: </label>
  <input type="text" id="image" name="image" value="<%= @butterfly['image'] %>">

  <label for="family">Family: </label>
  <select name="family" id="family">
    <% %w{Lycaenidae Nymphalidae Papilionidae Pieridae Riodinidae}.each do |family| %>
    <option <%= "selected" if family == @butterfly['family']%>>
      <%= family %></option>
    <% end %>
  </select>

  <button type="submit">Update Butterfly</button>
</form>